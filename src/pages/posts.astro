---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Card from "../components/CardPost.astro";
const allPosts = await getCollection("posts");
const pageTitle = "Historias";
---

<Layout pageTitle={pageTitle}>
    <div class="gif">
        <img width="300" height="259" alt="RaccoonNotesGif" src="/public/blog.webp" />
    </div>
    <h2>Historias cortas</h2>
    <ul role="list" class="link-card-grid">
        {
            allPosts.map((cardPost) => (
                <Card
                    url={`/posts/${cardPost.slug}/`}
                    title={cardPost.data.title}
                    date={cardPost.data.date}
                    extract={cardPost.data.extract}
                />
            ))
        }
    </ul>
</Layout>
